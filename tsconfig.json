{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": false,
    "noEmit": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": "./",
    "importHelpers": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/api/*": [
        "src/api/*"
      ],
      "@/background/*": [
        "src/background/*"
      ],
      "@/common/*": [
        "src/common/*"
      ],
      "@/config/*": [
        "src/config/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/database/*": [
        "src/database/*"
      ],
      "@/decorators/*": [
        "src/decorators/*"
      ],
      "@/exceptions/*": [
        "src/exceptions/*"
      ],
      "@/filters/*": [
        "src/filters/*"
      ],
      "@/generated/*": [
        "src/generated/*"
      ],
      "@/guards/*": [
        "src/guards/*"
      ],
      "@/interceptors/*": [
        "src/interceptors/*"
      ],
      "@/libs/*": [
        "src/libs/*"
      ],
      "@/mail/*": [
        "src/mail/*"
      ],
      "@/redis/*": [
        "src/redis/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@api": [
        "src/api"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@application": [
        "src/application"
      ],
      "@application/*": [
        "src/application/*"
      ],
      "@domain": [
        "src/domain"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@infra": [
        "src/infra"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@shared": [
        "src/shared"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  },
  "include": [
    "src",
    ".commitlintrc.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
